{
  "projectId": "billing-system",
  "projectName": "Billing System with Invoice Generator",
  "functions": [
    {
      "name": "generate-invoice",
      "runtime": "node-18.0",
      "path": "functions/generate-invoice",
      "entrypoint": "src/main.js",
      "execute": ["role:api_user", "role:billing_manager", "role:admin"],
      "events": [],
      "schedule": "",
      "timeout": 30,
      "enabled": true,
      "logging": true,
      "variables": {
        "SMTP_HOST": "",
        "SMTP_PORT": "587",
        "SMTP_USER": "",
        "SMTP_PASS": "",
        "COMPANY_NAME": "Your Company",
        "COMPANY_ADDRESS": "123 Business St, City, State 12345",
        "COMPANY_EMAIL": "billing@yourcompany.com",
        "COMPANY_PHONE": "+1 (555) 123-4567"
      }
    },
    {
      "name": "resend-invoice",
      "runtime": "node-18.0",
      "path": "functions/resend-invoice",
      "entrypoint": "src/main.js",
      "execute": ["role:billing_manager", "role:admin"],
      "events": [],
      "schedule": "",
      "timeout": 15,
      "enabled": true,
      "logging": true
    },
    {
      "name": "get-logs",
      "runtime": "node-18.0",
      "path": "functions/get-logs",
      "entrypoint": "src/main.js",
      "execute": ["role:viewer", "role:billing_manager", "role:admin"],
      "events": [],
      "schedule": "",
      "timeout": 10,
      "enabled": true,
      "logging": true
    }
  ],
  "collections": [
    {
      "name": "invoices",
      "id": "invoices",
      "permissions": {
        "read": ["role:viewer", "role:billing_manager", "role:admin"],
        "create": ["role:api_user", "role:billing_manager", "role:admin"],
        "update": ["role:billing_manager", "role:admin"],
        "delete": ["role:admin"]
      }
    },
    {
      "name": "audit_logs",
      "id": "audit_logs",
      "permissions": {
        "read": ["role:viewer", "role:billing_manager", "role:admin"],
        "create": ["role:api_user", "role:billing_manager", "role:admin"],
        "update": ["role:admin"],
        "delete": ["role:admin"]
      }
    }
  ],
  "buckets": [
    {
      "name": "invoices",
      "id": "invoices",
      "permissions": {
        "read": ["role:viewer", "role:billing_manager", "role:admin"],
        "create": ["role:api_user", "role:billing_manager", "role:admin"],
        "update": ["role:billing_manager", "role:admin"],
        "delete": ["role:admin"]
      },
      "fileSecurity": true,
      "enabled": true,
      "maximumFileSize": 10485760,
      "allowedFileExtensions": ["pdf"],
      "compression": "gzip",
      "encryption": true,
      "antivirus": true
    }
  ]
}
